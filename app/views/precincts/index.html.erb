<h1>Listing precincts</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<%= form_for @precinct do |f| %>
      <%= f.label :name, "Precinct Name"%>
      <%= f.text_field :name %>
      <%= f.submit "Find Precinct by Name" %>
<% end %>

<% @precincts.each do |precinct| %>
  <tr>
    <td><%= precinct.name %></td>
    <td><%= link_to 'Show', precinct %></td>
    <td><%= link_to 'Edit', edit_precinct_path(precinct) %></td>
    <td><%= link_to 'Destroy', precinct, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Precinct', new_precinct_path %>
