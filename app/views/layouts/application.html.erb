<!DOCTYPE html>
<html>
<head>
  <title>DigiCivic</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="bodycss">


<div id="fb-root"></div>
      <script>
        window.fbAsyncInit = function() {
              FB.init({
            appId      : '205528859544975',
            channelUrl : '//localhost:3000/channel.html',
            status     : true,
            cookie     : true,
            xfbml      : true,
            oauth      : true,
          });
        };
        (function(d){
           var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
           js = d.createElement('script'); js.id = id; js.async = true;
           js.src = "//connect.facebook.net/en_US/all.js";
           d.getElementsByTagName('head')[0].appendChild(js);
         }(document));
      </script>



<div class="container">


<div id="header" class="span-24">


  <div id="headerRight" class="push-19 span-5 last">
    <% if current_official %>

      <div id="currentOfficial" class="button">
      <%= link_to current_official.firstname, current_official %>
      </div>

      <div id="Official Edit Button" class="button last">
        <%= link_to "Edit my Profile", edit_official_path(current_official) %>
      </div>


      <div id="Official Sign-out Button" class="button last">
        <%= link_to "Sign-out", signout_path %>
      </div>



    <% elsif unless current_facebooker %>

        <div id="facebook log-in button" class="button">
        <%= link_to 'Facebook Login', '/auth/facebook/' %>
        </div>

        <div id="official Log-in  Button" class=" button">
          <%= link_to "Official Log-in", new_session_path %>
        </div>
         <div id="official Sign-Up Button" class="button last">
          <%= link_to "Official Sign-up", new_official_path %>
        </div>
    <% end %>
    <% else %>
        <div id="official Log-in  Button" class=" button">
          <%= link_to "Official Log-in", new_session_path %>
        </div>

        <div id="official Sign-Up Button" class="button last">
          <%= link_to "Official Sign-up", new_official_path %>
        </div>
    <% end %>



    <div class="fb-like" data-href="<%= current_url %>" data-send="false" data-layout="button_count"
         data-width="450" data-show-faces="true" data-font="lucida grande"></div>

  </div>








</div>

<div id="navigation" class="span-24">

  <div id="navElectedOfficials" class="span-8">
      <h3><%= link_to 'Elected Officials', officials_path %></h3>
  </div>

  <div id="navLegislations" class="span-8">
     <h3><%= link_to 'Legislations', legislations_path %></h3>
  </div>

  <div id="navConstituentPage" class="span-8 last">
     <h3><%= link_to 'My Dashboard', constituents_path(current_constituent) %></h3>
  </div>
</div>



        <div id="leftColumn" class="span-5">





      <%= yield :leftColumn %>
      </div>


      <div id="middleColumn" class="span-14">
            <%= yield :middleColumn%>
      </div>

      <div id="rightColumn" class="span-5 last">
            <%= yield :rightColumn %>
      </div>


<div id="footer" class="span-24">

  Footer  Copyright Digital Politics, LLC.  2012.
</div>


</div> <!--  container -->



</body>
</html>
