<h1>Listing sites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>State</th>
    <th>County</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= site.state %></td>
    <td><%= site.county %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to 'Set as Current site', races_path(:site_id => site.id) %></td>
  </tr>
<% end %>
</table>

