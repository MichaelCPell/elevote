<% content_for :leftColumn do %>
<h1>Edit Page</h1>
<% end %>

<% content_for :middleColumn do %>

      <%= form_for @official, :html => {:multipart => true } do |f| %>


        <%= f.fields_for :answers do |answer_fields| %>

            <%= answer_fields.object.question.name %>
            <br>
            <%= answer_fields.label :answer %>
            <%= answer_fields.text_field :name %>
            <br>
        <% end %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.file_field :portrait %>

        <%= f.submit %>



    <% end %>

<% end %>