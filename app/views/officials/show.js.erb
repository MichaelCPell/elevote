//This function controls the navigation in the left column.
//When the user clicks a link, this function replaces a div called "Active Window" with the html from the div that the user wants

$(document).ready(function(){
    $(".modal_content_trigger").click(function(e) {
        e.preventDefault();
        var myTarget = $(this).attr('href');
        var newHTML = $(myTarget).html();

        $("#modal_active_window").html(newHTML);
    });

    $("#lightbox_close").on("click", function(event){
        event.preventDefault();
        $("#lightbox").hide();
    });

    $("#lightbox_background").on("click", function(event){
        event.preventDefault();
        $("#modal_active_window").html(" ");
        $("#lightbox").hide();
    });


});


