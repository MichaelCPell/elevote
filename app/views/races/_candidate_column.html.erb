
<!--This needs to be refactored in a bad way-->
<div id="candidate_column" class="span3" style="width: 240px">

<h2><%= link_to candidate_column.full_name, candidate_column, :class => "candidate_view_full_profile lightbox_trigger", :remote => "true" %></h2>



<div class="fb-like" data-href="<%= official_url(candidate_column) %>" data-send="false"
     data-width="150" data-show-faces="true" data-font="trebuchet ms">
</div>
  
  <%= link_to "Add to Booth", new_endorsement_path(:official_id => candidate_column.id), :remote => true %>

<div class="candidate_portrait">
  <% if candidate_column.portrait_url %>
      <%= image_tag candidate_column.portrait_url.to_s %>
  <% else %>
      <%= image_tag 'missing_portrait.png' %>
  <% end %>
</div>


<div class="candidate_goals">
  <p class="subheading">
    Goals
  </p>

  <% myCounter = 0 %>
  <% if candidate_column.short_goals.count == 3 %>
      <% for goal in candidate_column.short_goals %>
          <% myCounter += 1 %>
          <div class="candidate_statement"><%=  myCounter.to_s + ".  " + goal.content %></div>
          <br>
      <% end %>
  <% else %>
      <div class="candidate_statement">1.  Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse.</div>
      <br>
      <div class="candidate_statement">2.  Praesent volutpat mi in massa placerat eget lacinia felis mattis.</div>
      <br>
      <div class="candidate_statement"> 3.  Morbi quis nibh purus, eu tincidunt mi. Integer tortor purus, interdum</div>
      <br>
  <% end %>
</div>

<div class="candidate_about">
  <p class="subheading">
    About
  </p>

  <% myCounter = 0 %>
  <% if candidate_column.short_goals.count == 3 %>
      <% for goal in candidate_column.short_achievements %>
          <% myCounter += 1 %>
