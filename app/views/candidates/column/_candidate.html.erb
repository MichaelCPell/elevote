<div class="candidate-column span3" style="width: 240px">

  <h2 style="text-align: center;">
    <%= link_to raw("#{candidate.full_name}   <span class='caret' style='margin-top: 15px;'></span>"), candidate, :class => "modal_trigger btn btn-large",
          :style => "width: 220px; font-size:24px; padding: 0px;", :remote => :true %>

  </h2>

  <div style="margin-left: 10px;">
    <%= render "layouts/facebook_like", :target => candidate %>
  </div>

  <div id="<%= candidate.firstname %>-booth-button" class="center" style="text-align: center;" >
    <%= is_in_booth(candidate.id) %>
  </div>

  <div class="candidate_portrait" style="text-align: center;">
    <% if candidate.portrait_url %>
      <%= image_tag candidate.portrait_url.to_s %>
    <% else %>
      <%= image_tag 'missing_portrait.png' %>
    <% end %>
  </div>


  <%= render "candidates/column/statements", :candidate => candidate, :category => "Goals" %>

  <%= render "candidates/column/statements", :candidate => candidate, :category => "About" %>




<div class="candidate_contact">
<p class="subheading">Contact</p>
<p>E-mail Address: <%= candidate.email %></p>
</div>

</div>

