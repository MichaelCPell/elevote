

<%= content_for :middleColumn do %>
<h1>
  Sign In
</h1>


   <%= form_tag sessions_path do %>
     <div class="field">
       <%= label_tag :email %>
       <%= text_field_tag :email, params[:email] %>
     </div>

     <div class="field">
       <%= label_tag :password %>
       <%= password_field_tag :password %>
     </div>

     <div class="actions"><%= submit_tag "Log in" %></div>

   <% end  %>

<% end %>


<%= content_for :rightColumn do %>
    <p id="notice"><%= notice %></p>

<% end %>

<%= content_for :rightColumn do %>
<%= notice %>
<% end %>

