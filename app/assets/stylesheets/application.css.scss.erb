/* Pagination */
.pagination {
    background: white;
    cursor: default;
    height: 22px;
    a, span, em {
        padding: 0.2em 0.5em;
        display: block;
        float: left;
        margin-right: 1px;
    }
    .disabled {
        color: #999999;
        border: 1px solid #dddddd;
    }
    .current {
        font-style: normal;
        font-weight: bold;
        background: #2e6ab1;
        color: white;
        border: 1px solid #2e6ab1;
    }
    a {
        text-decoration: none;
        color: #105cb6;
        border: 1px solid #9aafe5;
        &:hover, &:focus {
            color: #000033;
            border-color: #000033;
        }
    }
    .page_info {
        background: #2e6ab1;
        color: white;
        padding: 0.4em 0.6em;
        width: 22em;
        margin-bottom: 0.3em;
        text-align: center;
        b {
            color: #000033;
            background: #2e6ab1 + 60;
            padding: 0.1em 0.25em;
        }
    }
}


