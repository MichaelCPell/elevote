/* Navigation Stuff */

ul, li{margin:0; border:0; padding:0; list-style:none;}
#main_navigation{
    font-size:16px;


    font-weight:bold;

    height:30px;
    padding-top: 10px;



    .menu li {

        height:30px;
        float:left;
        margin-right:10px;
        width: 240px;


        a{

            text-decoration:none;

            height:30px;
            line-height:30px;
            display:block;

            padding:0 26px 0 40px;



        }

        a:hover{
            color:#666666;
        }


    }


    ul .submenu {
        border:solid 1px $gray;
        border-top:none;
        background:#FFFFFF;
        position:relative;

        padding:0px 0;
        clear:both;
        z-index:2;
        display:none;


        li{
            background:none;
            display:block;
            float:none;
            margin:0 0px;
            border:0;
            height:auto;
            line-height:normal;
            border-top:solid 1px #DEDEDE;
            width:240px;

            a{
                background:none;
                display:block;
                float:none;
                padding:6px 6px;
                margin:0;
                border:0;
                color:#105cbe;
                line-height:normal;

            }

            a:hover{
                background:#e3edef;

            }

        }

    }

}






