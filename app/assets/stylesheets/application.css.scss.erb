/*Lightbox*/
#lightbox{
    display: none;


    #lightbox_background{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color:rgba(0,0,0,.75);
    text-align: right;

    a {
     text-align: right;
     color: white;
     margin-right: 20px;
     font-size: 25px;

    }
   }

   #lightbox_box{


       position: fixed;
       top: 10%;
       left: 50%;
       width: 1030px; /* This is equal to span 26 */
       margin-left: -515px;


       height: 650px;
       background: white;
       z-index: 1000;
   }

}


