$red: #800000;
$yellow: #d3a414;
$gray: #2d2d2c;
$fontwhite: #f9f9f9;
$blue: #012646;


body {
    background-color: #d3d3d3;
}



#dark_runner{
    height: 150px;
    width: 100%;
    background: $gray;
    position: absolute;
    border-bottom: 45px #d2b48c solid;
    z-index: 1;

}    



#container {

    margin: 0 auto;
    top: 0;
    width: 1150px;
    position: relative;
    z-index: 3;

}


header {
  height: 195px; /* This should be dark_runner + dark_runner's bottom border */
  color: white;

  #header_image{
    height: 130px; /* This height, including padding, should be the same as the height for dark_runner*/
    padding-top: 20px;
  }

  #navigation{
    height:40px;  /*This height should be the same as the height for dark_runner's bottom border*/

      ul{
      text-align: middle;
      list-style: none;
      margin: 0;
      padding: 0;

      #electoral_contests_link{
       background-image: url("electoral-link.png");
       width: 250px;
      }

      .navigation_link{
          width: 210px;
          margin: 0 auto;
          height: 49px;
          text-align: center;
          padding-top: 10px;
      }


      li {
          float:left;
          font-size: 18px;

          a{
              width: 250px;
              text-decoration:none;
              margin: 0 auto;
              color: white;


          }

          a:hover{
              color:#666666;
          }


      }
    }
  }
  
}










#content {

    float: left;
}






/*Lightbox*/
#lightbox{
    display: none;


    #lightbox_background{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color:rgba(0,0,0,.75);
    text-align: right;

    a {
     text-align: right;
     color: white;
     margin-right: 20px;
     font-size: 25px;

    }
   }

   #lightbox_box{


       position: fixed;
       top: 10%;
       left: 50%;
       width: 1030px; /* This is equal to span 26 */
       margin-left: -515px;


       height: 650px;
       background: white;
       z-index: 1000;
   }

}

